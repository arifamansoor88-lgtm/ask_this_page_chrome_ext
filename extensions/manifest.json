{
  "manifest_version": 3,
  "name": "Ask This Page",
  "description": "Ask questions and get answers from the current webpage",
  "version": "1.0",

  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
